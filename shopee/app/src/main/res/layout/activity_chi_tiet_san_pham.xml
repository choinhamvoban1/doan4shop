<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietSanPhamActivity">

    <ScrollView
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:src="@mipmap/blank_avatar"
                android:id="@+id/imghinhspCT"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <TextView

                android:textColor="@color/mauden"
                android:textSize="24dp"
                android:text="tên sản phẩm"
                android:id="@+id/txttenspCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:textSize="24dp"
                android:textColor="@color/maudo"
                android:text="giá sản phẩm"
                android:id="@+id/giaspCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="size L"
                android:textColor="@color/mauden"
                android:textSize="24dp"
                android:id="@+id/txtsizeCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="24dp"
                android:textColor="@color/mauden"
                android:id="@+id/txtsoluongCT"
                android:text="số lượng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtmotaCT"
                android:textSize="20dp"
                android:textColor="@color/mauden"
                android:text="mô tả sản phẩm "
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>