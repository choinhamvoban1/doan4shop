        <TextView
            android:id="@+id/txtsoluong1"
            android:text="sl:24"
            android:textStyle="bold"
            android:textColor="@color/maudo"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtsize1"
            android:text="size:L"
            android:textStyle="bold"
            android:textColor="@color/maudo"
            android:textSize="14dp"
            android:layout_width="match_parent"
